<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cover_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/common_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.cjw.showimagev1.view.MyImageView
            android:id="@+id/common_part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@drawable/common_part1" />

        <com.cjw.showimagev1.view.MyImageView
            android:id="@+id/common_part2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@drawable/common_part2"
            android:layout_marginLeft="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vip_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.cjw.showimagev1.view.MyImageView
            android:id="@+id/vip_part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@drawable/vip_part1" />

        <com.cjw.showimagev1.view.MyImageView
            android:id="@+id/vip_part2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@drawable/vip_part2" />
    </LinearLayout>

</LinearLayout>